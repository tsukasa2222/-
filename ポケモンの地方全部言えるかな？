    let score = 0;
    let answered = [];

    // ã²ã‚‰ãŒãªãƒã‚§ãƒƒã‚¯
    function isHiragana(str) {
      return /^[ã-ã‚“ãƒ¼]+$/.test(str);
    }

    // ã‚°ãƒªãƒƒãƒ‰ä½œæˆ
    const grid = document.getElementById("grid");
    wordList.forEach(word => {
