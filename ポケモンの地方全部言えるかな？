    const wordList = [
      "ã‹ã‚“ã¨ãƒ¼", "ã˜ã‚‡ã†ã¨", "ã»ã†ãˆã‚“", "ã—ã‚“ãŠã†",
      "ã„ã£ã—ã‚…", "ã‹ã‚ã™", "ã‚ã‚ãƒ¼ã‚‰", "ãŒã‚‰ã‚‹", "ã±ã‚‹ã§ã‚"
