    function checkAnswer() {
      const input = document.getElementById("answer").value.trim();

      if (!isHiragana(input)) {
        document.getElementById("result").innerText = "ã²ã‚‰ãŒãªã§å…¥åŠ›ã—ã¦ãã ã•ã„";
